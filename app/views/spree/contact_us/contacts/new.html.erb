<% content_for :head do -%>
  <meta name="title" content="Zook <%= Spree.t(:contact_us_title) %>">
<% end -%>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @contact } %>

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h1><%= Spree.t(:contact_us_title) %></h1>
    <h3>Please feel free to contact us with your queries, complaints and complements.</h3>
    <pre>Email: info@zook.co.za</pre>
  </div>
  <div class="col-md-2"></div>
</div>
<div class="row">
  <div class="col-md-2">
  
  </div>
  <div class="col-md-8">
    <div class="contact_form">
      <h2>Contact Form</h2>
      <%= form_for @contact, :url => contacts_path, :html => { :novalidate => '' } do |f| %>
        <% if SpreeContactUs.require_name %>
          <p>
            <%= f.label :name %>
            <span class="required">*</span><br/>
            <%= f.text_field :name, class: 'required form-control' %>
          </p>
        <% end %>
        <p>
          <%= f.label :email %>
          <span class="required">*</span><br/>
          <%= f.email_field :email, class: 'required form-control email' %>
        </p>
        <% if SpreeContactUs.require_subject %>
          <p>
            <%= f.label :subject %>
            <span class="required">*</span><br/>
            <%= f.text_field :subject, class: 'required form-control' %>
          </p>
        <% end %>
        <p>
          <%= f.label :message %>
          <span class="required">*</span><br/>
          <%= f.text_area :message, class: 'required form-control' %>
        </p>
        <p>
          <%= f.submit Spree.t(:submit), :alt => Spree.t(:submit), :id => 'contact_us_contact_submit', :title => Spree.t(:submit), class: 'btn btn-info' %>
        </p>
      <% end %>
    </div>
  </div>
  <div class="col-md-2">
    
  </div>
</div>



